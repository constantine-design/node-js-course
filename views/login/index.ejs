<%- include('../partials/header'); -%>

    <div class="d-flex flex-column" style="min-height: 100vh">

      <%- include('../partials/navbar'); -%>
      
      <div class="starter-template flex-grow-1 d-flex flex-column justify-content-center">
        <div class="mx-auto mb-5" style="max-width: 400px;">
          <h2 class="text-center mt-5 mb-4">Login</h2>
          <form method="post">
            <div class="form-group">
              <input class="form-control mb-3" name="login" placeholder="Login" required  />
              <input class="form-control mb-3" name="password" type="password" placeholder="Password" required  />
            </div>
            <% if (errorMessage) { %>
              <div class="alert alert-danger text-center py-2 mb-3">
                <%= errorMessage %>
              </div>
            <% } %>
            <div class="text-right">
              <button type="submit" class="btn btn-primary">Sign in</button>
            </div>
          </form>
        </div>
      </div>
    </div>

<%- include('../partials/footer'); -%>
